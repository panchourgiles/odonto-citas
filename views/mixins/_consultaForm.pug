mixin consultaForm(paciente)
  form.reviewer(action=`/consultas/${paciente._id}/add` method="POST")
    textarea(name="descripcion" placeholder="Descripci√≥n de la consulta" required)
    p Piezas tratadas
    .reviewer__meta
      - const choices = ['11', '12', '13', '14', '15', '16', '17', '18', '21', '22', '23', '24', '25', '26', '27', '28', '31', '32', '33', '34', '35', '36', '37', '38', '41', '42', '43', '44', '45', '46', '47', '48']
      - const piezas = consulta && consulta.piezas || []
      ul.tags
        each choice in choices
          .tag.tag__choice
            input(type="checkbox" id=choice value=choice name="piezas" checked=(piezas.includes(choice)))
            label(for=choice) #{choice}
    input.button(type="submit" value="Guardar consulta")
